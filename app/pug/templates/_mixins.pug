mixin categoryItem (text,title, q)
    - for(let i = 0; i < q; i++)
        .category__item
            p= text[i]
            h3= title[i]

mixin card (title, text, price, q, img = 0)
    if (!img)
        - for(let i = 1; i < q + 1; i++) 
            .card
                .card__img
                    img(src=`../../img/Card${i}.png`, alt="product")
                .card__body
                    h3= title
                    p= text 
                    span= price
    else 
        //- - for(let i = 1; i < q + 1; i++) 
        //-     .card
        //-         .card__img
        //-             img(src=`../../img/Card${img[i-1]}.png`, alt="product")
        //-         .card__body
        //-             h3= title
        //-             p= text 
        //-             span= price   
        //- correct above
        - for(let i = 1; i < q + 1; i++) 
            if (i > 6)
                .card
                    .card__img
                        img(src=`../../img/catalog/CatCard${[i]}.png`, alt="product")
                    .card__body
                        h3= title
                        p= text 
                        span= price
            else                
                .card
                    .card__img
                        img(src=`../../img/Card${[i]}.png`, alt="product")
                    .card__body
                        h3= title
                        p= text 
                        span= price

mixin factor (title, text, q)
    -for(let i = 0; i < q; i++)
        .factor 
            img(src=`../../img/Factor${i+1}.png`, alt="factor")
            h3= title[i]
            p= text

mixin cartItem (title, price, q)
    -for (let i = 0; i < q; i++)
        .cart-item 
            .cart-item__img
                img(src=`../../img/cart/Cart${i+1}.jpg`, alt="cart img")                 
            .cart-item__text 
                h3= title[i]
                span!= `Price: <span class="highlight">${'$' + price[i]}</span> `
                span Color: Red
                span Size: XL
                span Quantity: <span class="qty">2</span>
            .cart-item__close 
                <i class="fas fa-times"></i>

mixin smallHeader (title, p = 0)
    section.small-header
        .container.small-header__flex
            h2= title
            if (p)
                p HOME / MEN / <span class="highlight">NEW ARRIVALS </span>

mixin sort (one, two, three, four)
    .sort 
        details.sort__filter
            summary.custom-sum= one 
        .sort__items 
            details
                summary= two 
            details
                summary= three 
            details 
                summary= four

mixin pages (n) 
    nav.pagination 
        <i class="fas fa-chevron-left" ></i>
        ul 
            - for (let i = 0; i < n; i++)
                li <a href="#">#{i+1}</a>
            li <a href="#">.....</a>
            li <a href="#">20</a>
        <i class="fas fa-chevron-right"></i>